<h1> Edit articles</h1>

<%= form_with(model: @article, local: true) do |form|%>
    <% if @article.errors.any?%>
      <div id="error-explanation">
        <h2><%= pluralize(@article.errors.count, "error")%> prohibited the form to make the changes</h2>
        <ul>
          <% @article.errors.full_messages.each do |msg|%>
          <li><%= msg %></li>
          <%end%>
        </ul>
      </div>
    <%end%>
    <p>
      <%= form.label :title%><br>
      <%= form.text_field :title%>
    </p>
    <p>
      <%= form.label :text%><br>
      <%= form.text_area :text%>
    </p>
    <p>
      <%= form.submit %>
    </p>
<%end%>

<%= link_to 'Back', articles_path %>